# Backend Environment Variables
NODE_ENV=development
PORT=5000
SERVER_URL=http://localhost:5000

# Database
DATABASE_URL=postgresql://postgres:password@localhost:5432/whatsapp_db
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=password
DB_NAME=whatsapp_db

# Redis
REDIS_URL=redis://localhost:6379

# JWT
JWT_SECRET=your_super_secret_jwt_key_32_chars_long
JWT_REFRESH_SECRET=your_refresh_token_secret
JWT_EXPIRE=7d
JWT_REFRESH_EXPIRE=30d

# AWS S3
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key
AWS_S3_BUCKET=whatsapp-clone-bucket
AWS_REGION=us-east-1

# OAuth
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_secret
APPLE_CLIENT_ID=your_apple_client_id
APPLE_CLIENT_SECRET=your_apple_secret

# Encryption
ENCRYPTION_KEY=your_32_byte_base64_encoded_key

# FCM (Firebase Cloud Messaging)
FCM_PROJECT_ID=your_firebase_project_id
FCM_PRIVATE_KEY=your_private_key
FCM_CLIENT_EMAIL=your_client_email

# SMS/Email
TWILIO_ACCOUNT_SID=your_twilio_sid
TWILIO_AUTH_TOKEN=your_twilio_token
TWILIO_PHONE_NUMBER=+1234567890

SENDGRID_API_KEY=your_sendgrid_key

# Frontend
VITE_API_URL=http://localhost:5000/api
VITE_WS_URL=ws://localhost:5000
VITE_GOOGLE_CLIENT_ID=your_google_client_id

# Logging
LOG_LEVEL=debug
LOG_FORMAT=combined

# CORS
CORS_ORIGIN=http://localhost:5173,http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW=15m
RATE_LIMIT_MAX_REQUESTS=100
